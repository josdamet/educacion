    function speak(text){
      if(!text) return;
      const utter = new SpeechSynthesisUtterance(text);
      const voices = window.speechSynthesis.getVoices();
      const mx = voices.find(v => /es(-|_)MX/i.test(v.lang));
      const es = voices.find(v => /^es/i.test(v.lang));
      utter.voice = mx || es || null;
      utter.rate = 0.9;
      window.speechSynthesis.cancel();
      window.speechSynthesis.speak(utter);
    }
    window.speechSynthesis.onvoiceschanged = () => {};

    function speakSyllables(sylls){
      if(!Array.isArray(sylls) || !sylls.length) return speak('');
      let i = 0;
      const sayNext = () => {
        if(i >= sylls.length) return;
        const u = new SpeechSynthesisUtterance(sylls[i]);
        const voices = window.speechSynthesis.getVoices();
        u.voice = voices.find(v => /es(-|_)MX/i.test(v.lang)) || voices.find(v => /^es/i.test(v.lang)) || null;
        u.rate = 0.8;
        i++;
        u.onend = () => setTimeout(sayNext, 120);
        speechSynthesis.speak(u);
      };
      speechSynthesis.cancel();
      sayNext();
    }

    function renderImage(item){
      const url = `https://openmoji.org/data/color/svg/${item.code}.svg`;
      $media.innerHTML = `
        <img src="${url}" alt="${item.word}" onerror="this.outerHTML='<span class=&quot;emoji-fallback&quot;>${item.emoji}</span>'" />
      `;
    }

    function renderHints(item, forLevel){
      $syllHints.innerHTML = '';
      const show = (forLevel===3) ? showHintsL3 : true;
      $syllHints.style.display = show ? 'flex' : 'none';
      if(!show) return;

      const row = document.createDocumentFragment();
      item.syll.forEach(s => {
        const chip = document.createElement('button');
        chip.className = 'chip';
        chip.type = 'button';
        chip.textContent = s;
        chip.title = 'Escuchar sÃ­laba';
        chip.addEventListener('click', () => speak(s));
        row.appendChild(chip);
      });
      $syllHints.appendChild(row);
    }

    function getCurrent(){ return queue[idx]; }

    function setupLevel(newLevel){
      level = newLevel;
      hits = 0; wrong = [];
      startedAt = Date.now();
      if(level===1){
        queue = shuffle(WB.filter(w => w.syll.length >= 2));
      } else {
        queue = shuffle(WB);
      }
      idx = 0;
      $hits.textContent = hits;
      $left.textContent = queue.length - idx;
      document.querySelectorAll('[data-level]').forEach(btn=>{
        btn.className = (Number(btn.dataset.level)===level) ? 'btn-primary' : 'btn
