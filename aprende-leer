    const normalize = (s) =>
      (s||"")
        .toLowerCase()
        .normalize('NFD')
        .replace(/\\p{Diacritic}/gu,'')
        .replace(/[^a-zÃ±Ã¡Ã©Ã­Ã³ÃºÃ¼0-9\\s]/gi,'')
        .trim();

    const shuffle = (arr) => {
      const a = arr.slice();
      for (let i=a.length-1;i>0;i--){
        const j = Math.floor(Math.random()*(i+1));
        [a[i],a[j]]=[a[j],a[i]];
      }
      return a;
    };

